<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title | default('README.dan - Learn more about Dan Short') }}</title>

    <!-- Meta Description -->
    <meta name="description" content="{{ description | default(site.defaultDescription) }}">

    <!-- OpenGraph Meta Tags -->
    <meta property="og:title" content="{{ title | default('README.dan - Learn more about Dan Short') }}" />
    <meta property="og:description" content="{{ description | default(site.defaultDescription) }}" />
    <meta property="og:image" content="https://www.gravatar.com/avatar/{{ site.gravatar }}?s=400" />
    <meta property="og:url" content="{{ site.siteUrl }}{{ page.url }}" />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="{{ site.siteName }}" />
    <meta property="og:locale" content="{{ site.locale }}" />

    <!-- Umami Analytics -->
    <script defer src="https://cloud.umami.is/script.js" data-website-id="a54a753e-4952-43fa-b507-5f77c05b2d0f"></script>

    <!-- CSS -->
    <link rel="stylesheet" href="/css/main.css">

    <!-- Site Data for JavaScript -->
    <script>
        const siteData = {
            managingYear: '{{ site.managingYear }}',
            executiveYear: '{{ site.executiveYear }}',
            devYear: '{{ site.devYear }}'
        };
    </script>
</head>
<body>
    <div class="container">
        <aside class="sidebar">
            <div class="hamburger-toggle" id="hamburger-menu">
                <span></span>
                <span></span>
                <span></span>
            </div>
            <a href="https://mentorcruise.com/mentor/danshort/" class="mentorship-link" target="_blank" data-umami-event="MentorCruise Link Clicked">
                <i>üë®‚Äçüè´</i> Available for Mentoring
            </a>
            <div class="toc-container">
                <h2>Contents</h2>
                <ul class="toc" id="toc">
                    <!-- Table of contents will be generated by JS -->
                </ul>
            </div>
        </aside>

        <main class="content">
            <div class="theme-toggle">
                <span>Theme:</span>
                <button id="theme-toggle-btn">Auto</button>
            </div>

            <div class="profile-header">
                <div class="profile-image">
                    <img src="https://www.gravatar.com/avatar/{{ site.gravatar }}?s=400" alt="{{ site.name }}">
                </div>
                <div class="profile-title">
                    <span class="profile-name">{{ name | default(site.name) }}</span>
                    <span class="profile-role">{{ role | default(site.role) }}</span>
                    <div class="stats-container">
                        <div class="stat-item">
                            <span class="stat-value" id="years-dev">--</span>
                            <span class="stat-label">Years in Software</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-value" id="years-managing">--</span>
                            <span class="stat-label">Years Managing Engineers</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-value" id="years-executive">--</span>
                            <span class="stat-label">Years Managing Managers</span>
                        </div>
                    </div>
                    <div class="social-links">
                        <a href="{{ site.social.linkedin }}" class="social-link" target="_blank">
                            <svg class="social-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path>
                                <rect x="2" y="9" width="4" height="12"></rect>
                                <circle cx="4" cy="4" r="2"></circle>
                            </svg>
                            LinkedIn
                        </a>
                        <a href="{{ site.social.github }}" class="social-link" target="_blank">
                            <svg class="social-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path>
                            </svg>
                            GitHub
                        </a>
                    </div>
                </div>
            </div>

            {% if note %}
            <p class="note">{{ note }}</p>
            {% endif %}

            <!-- Content inserted here -->
            {{ content | safe }}

            <p class="update-info">Updated: {{ updated | default('28 April, 2025') }}</p>
        </main>
    </div>

    <!-- JavaScript -->
    <script src="/js/main.js"></script>
</body>
</html>